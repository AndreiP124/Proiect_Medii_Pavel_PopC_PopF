@page
@model Restaurant.Pages.Menu.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>MENU</h1>

<p>
    <a asp-page="Create">Add A Menu Item</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Menu_items[0].category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Menu_items[0].name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Menu_items[0].price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Menu_items[0].description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Menu_items) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.description)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<p>
    <a asp-page="../Reservations/IndexAdmin">To Reservations</a>
</p>
<p>
    <a asp-page="Index">MENU - Client View</a>
</p>
