@page "/"
@model Restaurant.Pages.Menu.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>MENU</h1>

<p>

</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Menu_items[0].category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Menu_items[0].name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Menu_items[0].price)
            </th>
